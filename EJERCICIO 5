class Persona:
  def __init__(self, nombre):
    self.nombre = nombre

  def __str__(self):
    return self.nombre

class Libro:
  def __init__(self, titulo, autor, isbn, paginas, edicion, editorial, lugar, fecha):
    self.titulo = titulo
    self.autor = autor
    self.isbn = isbn
    self.paginas = paginas
    self.edicion = edicion
    self.editorial = editorial
    self.lugar = lugar
    self.fecha = fecha

  def mostrar_info(self):
    return f"""TÃ­tulo: {self.titulo} {self.edicion}
  Autor: {self.autor}
  ISBN: {self.isbn}, {self.lugar}
 {self.fecha}
  {self.paginas}paginas"""
